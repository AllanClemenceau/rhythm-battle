{
  "name": "rhythm-battle",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "web": "turbo run dev --filter=web",
    "party": "partykit dev",
    "worker": "cd workers/audio-processor && wrangler dev"
  },
  "devDependencies": {
    "partykit": "^0.0.115",
    "partysocket": "^1.1.10",
    "turbo": "^2.3.0"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": ">=18.0.0"
  }
}
